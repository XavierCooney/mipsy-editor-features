{
  "name": "mipsy",
  "displayName": "mipsy",
  "description": "",
  "publisher": "Xavier Cooney",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:mips", "onDebug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "breakpoints": [{
      "language": "mips"
    }],
    "debuggers": [
      {
        "type": "mipsy-1",
        "label": "Mipsy",
        "program": "./out/mipsDebugAdapter.js",
        "runtime": "node",
        "languages": [
          "mips"
        ]
      }
    ],
    "grammars": [
      {
        "language": "mips",
        "scopeName": "source.mips",
        "path": "./syntaxes/mips.tmLanguage.json"
      }
    ],
    "languages": [
      {
        "id": "mips",
        "aliases": [
          "MIPS",
          "Mipsy"
        ],
        "extensions": [
          ".s",
          ".mips"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configurationDefaults": {
      "[mips]": {
        "editor.insertSpaces": false,
        "editor.detectIndentation": false,
        "editor.tabSize": 8
      }
    },
    "configuration": {
      "type": "object",
      "title": "MIPS configuration",
      "properties": {
        "mips.maxDiagonstics": {
          "scope": "resource",
          "type": "number",
          "default": 3,
          "description": "How many mipsy parsing/compilation errors to report, per file. Set to 0 to disable diagonstics. Setting to a very large number will slow down diagonstics when your code has a large number of problems."
        }
      }
    },
    "commands": [
      {
        "category": "MIPS",
        "title": "Decompile MIPS",
        "command": "mips.decompileCurrent",
        "enablement": "resourceLangId == mips && !isInDiffEditor && resourceScheme != mips-decompile"
      },
      {
        "icon": "$(debug-alt)",
        "category": "MIPS",
        "title": "Debug MIPS",
        "command": "mips.debug",
        "enablement": "resourceLangId == mips && !isInDiffEditor && resourceScheme != mips-decompile"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "mips.debug",
          "when": "resourceLangId == mips && !isInDiffEditor && resourceScheme != mips-decompile",
          "group": "navigation"
        },
        {
          "command": "mips.decompileCurrent",
          "when": "resourceLangId == mips && !isInDiffEditor && resourceScheme != mips-decompile",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.58.0",
    "vscode-languageclient": "^8.0.2",
    "vscode-languageserver": "^8.0.2",
    "vscode-languageserver-textdocument": "^1.0.8"
  }
}
